{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block body %}

  {{ parent() }}

  <div class="container">
    <div class="row center">
      <div class="page-header">
        <div class="row">
          <div class="col-lg-2">
            <h1>{% trans %}Locations{% endtrans %}</h1>
          </div>
          <div class="col-lg-4">
            <a class="btn btn-info btn-create" href="{{ path('schedule_location_new') }}">
              <i class="fa fa-plus"></i>
            </a>
          </div>
        </div>
      </div>

      <table class="table table-hover records_list">
        <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Description</th>
          <th>Capacity</th>
          <th>Equipments</th>
          <th colspan="3">{% trans %}Actions{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in pager.currentPageResults %}
          <tr>
            <td><a href="{{ path('schedule_location_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.capacity }}</td>
            <td> {% for equipment in entity.getEquipments() %}
                <i class="icon-{{ equipment.icon }}"></i>
              {% endfor %}
            </td>
            <td>
              <a class="btn btn-block btn-default btn-small"
                 href="{{ path('schedule_location_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i></a>
            </td>
            <td>
              <a class="btn btn-block btn-warning btn-small"
                 href="{{ path('schedule_location_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil"></i></a>
            </td>
          </tr>
        {% endfor %}
        </tbody>
      </table>

      <p>
        {{ pagerfanta(pager, 'twitter_bootstrap3') }}
      </p>

    </div>
  </div>


{% endblock body %}
