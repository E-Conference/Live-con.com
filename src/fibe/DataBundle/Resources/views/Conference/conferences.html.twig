{% extends 'DataBundle::base.html.twig' %}

 {% block title %}All Livecon Conferences{% endblock title %}


{% block body %}

<!-- HomePage Menu -->

    <div id="header">
      <div class="container_12">
        <div class="grid_2"><a href="#entete" title="Livecon UPGRATE YOUR CONFERENCE"><img src="{{ asset('bundles/fibehomepage/img/logo.png') }}" alt="Livecon" /></a></div>
        <div class="grid_10" id="menu">
          <ul>
            <li><a href="{{ path('login') }}" title="Login">Login</a></li>
            <li><a href="{{ path('fos_user_registration_register') }}" title="Signup">Sign up</a></li>
          </ul>
        </div>

      </div>
    </div>



<!-- Conferences List -->

<div id="entete">
  <input type="text" class="form-control" placeholder="Conference Name" id="conference_filter_name"/>

  <div id="conferences_list">
        {% include "DataBundle:Conference:conferencesList.html.twig" %}
  </div>
</div>



<!-- DataConf show Modal -->

<div id="dataconf_iframe" class="modal fade" tabindex="-1" aria-hidden="true" role="dialog" >
  <div class="modal-dialog">
      <div class="modal-content">
              <iframe src="" width="1000px" height="600px" ></iframe>
      </div>
  </div>
</div>

{% endblock body %}


{% block javascripts_page %}
   {{parent()}}
   <script type="text/javascript" src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script> 
    <script  type="text/javascript">
         $(document).ready(function() {

            $("#conference_filter_name").keypress(function(){
                  var nameConf = $("#conference_filter_name").val();
               $.post("{{path('datas_conferences_filter')}}",               
                       {name : nameConf } , 
                    function(response){
                           $('#conferences_list').html(response);
                    }, "html"); 
             });


            $('#dataconf_iframe').modal('hide');

            $('.show_dataconf').click(function() {
                    var dataconfUrl = $(this).attr('data-url');

                    $('#dataconf_iframe').find("iframe").attr('src',dataconfUrl);
                    $('#dataconf_iframe').modal('show');

           })


          });

    </script>
