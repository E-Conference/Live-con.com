{% block title %}Index{% endblock title %}

{% block body %}

  {% block center %}
    <div class="container">
      <div class="row center">

        <div class="row">
          <table class="table table-hover records_list">
            <thead>
              <tr>
                <th>Name</th>
              </tr>
            </thead>
            <tbody>
              {% for entity in entities %}
                <tr>
                  <td>
                    <a href="{{ path('person', { 'slug': entity.slug, 'object': 'Person'  }) }}">{{ entity.name }}</a>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  {% endblock %}
{% endblock %}
