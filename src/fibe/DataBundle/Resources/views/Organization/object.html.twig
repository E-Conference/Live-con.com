{% block body %}




  <div class="container">
    <div class="row center">
      <h1>Organization</h1>

      <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-6">
          <h2> {{ entity.title }}</h2>
          <table class="table table-hover">
            <tbody>
            <tr>
              <th>Id</th>
              <td>{{ entity.id }}</td>
            </tr>
            <tr>
              <th>Name</th>
              <td>{{ entity.name }}</td>
            </tr>
            <tr>
              <th>Page</th>
              <td>{{ entity.page }}</td>
            </tr>
            <tr>
              <th>Country</th>
              <td>{{ entity.country }}</td>
            </tr>
            <tr>
              <th>Members</th>
              <td> {% for person in entity.members %}
                  <li>
                    <a href="{{ path('object', { 'slug': person.slug, 'object': 'Person' }) }}">{{ person.name }}</a>
                  </li>
                {% endfor %}
              </td>
            </tr>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </div>
{% endblock %}
