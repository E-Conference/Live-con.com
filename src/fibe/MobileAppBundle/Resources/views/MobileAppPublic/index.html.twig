    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <script  src="{{ asset('bundles/fibemobileapp/mobileApp/js/lib/require.js') }}"></script>
    <script>

      //Require.js configurations
      require.config({
          baseUrl: "{{ asset('bundles/fibemobileapp/mobileApp/js') }}",
        shim: {
          backbone: {
            deps: [
              'underscore', 
              'jquery'
            ],
            exports: 'Backbone'
          },
          jqueryMobile: {
                  deps: [
                      'jquery',
                      'jqueryMobile.config'
                  ]
          },
          'jStorage' : {
            deps: [
                  'jquery'
              ]
          },
          'jqueryMobile.config': {
            deps: [
                  'jquery',
              ]
          },
          'twttr' :{
            exports : 'widget',
            init: function () {
             
                return this.twttr;
            }
           },
          'underscore': {
            exports: '_'
          }
        },
          paths: {
              jquery: 'lib/jquery',
              backbone: 'lib/backbone',
              underscore : 'lib/underscore-min',
              twttr :'lib/widget',
              'socialite': 'lib/socialite.min',
              'jqueryMobile.config' : 'lib/jquerymobile.config',
              'jsw' : 'reasoner/jsw',
              'jswui' : 'reasoner/jswui',
              'query' : 'reasoner/query',
              'encoder': 'lib/encoder',
              'blob': 'lib/blob',
              'fileSaver' : 'lib/FileSaver',
              'labels' : 'i18n/labels',
              'jqueryMobile' : 'lib/jquery.mobile-1.4.0-rc.1.min',
              'jStorage' : 'lib/jstorage.min',
              'moment' : 'lib/moment.min',
              'tpl' : 'lib/templateLoader',
              'ajaxLoader' : 'ajaxLoader/AjaxLoader'
          } 

      });
      
      //Configurations
      require(['config', 'tpl', 'model/swcEventCommandStore', 'model/liveconSparqlCommandStore','moment'], function(configuration, tpl, liveconApiCommandStore, liveconSparqlCommandStore, moment){

        if("{{ api_type}}" == "sparql"){
             configuration.datasources.eventDatasource.commands = liveconSparqlCommandStore;
        }else{
             configuration.datasources.eventDatasource.commands = liveconApiCommandStore;
        }

        //Modules configuration
        var modules = []
        {% if paper_module == true %}
          modules.push("publications");
        {% endif %}
        {% if organization_module == true %}
          modules.push("organizations");
        {% endif %}
       
        //Chosen datasource configuration
         {% if mobile_app_config.dblpDatasource == false %}
            configuration.datasources.DblpDatasource.activated = false;
         {% endif %}
         {% if mobile_app_config.googleDatasource == false %}
            configuration.datasources.GoogleDataSource.activated = false;
         {% endif %}
         {% if mobile_app_config.duckduckgoDatasource == false %}
            configuration.datasources.DuckDuckGoDatasource.activated = false;
         {% endif %}

        tpl.modules = modules;

 
        configuration.datasources.eventDatasource.uri = "{{ api_uri }}";
        configuration.app.liveconLogo = "{{ asset('img/liveconApp.png') }}";
        configuration.conference.baseUri = "{{ conference_baseUri }}";
        // configuration.conference.baseUri = "http://data.live-con.com/resource/conference/1/1iswc3013";
        configuration.conference.name = {{ conference.mainConfEvent.summary |json_encode|raw }};
        configuration.conference.acronym = {{ conference.mainConfEvent.acronym |json_encode|raw }};
        configuration.conference.id = {{ conference.id |json_encode|raw }};
        configuration.conference.eventId = {{ conference.mainConfEvent.id |json_encode|raw }};
        configuration.conference.logoUri = "{{ asset('uploads/')}}{{conference.logoPath}}";
        configuration.routes.Home.title = {{ conference.mainConfEvent.acronym |json_encode|raw }};
        tpl.uri = "{{ asset('bundles/fibemobileapp/mobileApp/templates/') }}";
        
        //Language configuration
        moment.lang({{ mobile_app_config.lang |json_encode|raw }});
        configuration.conference.lang = {{ mobile_app_config.lang |json_encode|raw }} || 'EN';



      });
      
      //Entry point
      require(['app']);

    </script>
