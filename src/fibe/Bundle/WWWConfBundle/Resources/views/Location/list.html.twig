<div id="resultsFound"><h4>
    {% if nbResult is defined %}
      {{ nbResult }}
    {% else %}
      0
    {% endif %}
    results found
  </h4></div>
<table class="table table-hover records_list">
  <thead>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Description</th>
    <th>Capacity</th>
    <th>Equipments</th>
    <th colspan="3">{% trans %}Actions{% endtrans %}</th>
  </tr>
  </thead>
  <tbody>
  {% for entity in pager.currentPageResults %}
    <tr>
      <td><a href="{{ path('schedule_location_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
      <td>{{ entity.name }}</td>
      <td>{{ entity.description }}</td>
      <td>{{ entity.capacity }}</td>
      <td> {% for equipment in entity.getEquipments() %}
          <i class="fa fa-{{ equipment.icon }}"></i>
        {% endfor %}
      </td>
      <td>
        {% if is_granted('VIEW', entity) %}
          <a class="btn btn-block btn-default btn-small"
             href="{{ path('schedule_location_show', { 'id': entity.id }) }}"><i
                class="fa fa-eye"></i></a>
        {% endif %}
      </td>
      <td>
        {% if is_granted('EDIT', entity) %}
          <a class="btn btn-block btn-warning btn-small edit"
             href="{{ path('schedule_location_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil"></i></a>
        {% endif %}
      </td>

    </tr>
  {% endfor %}
  </tbody>
</table>

<p>
  {{ pagerfanta(pager, 'twitter_bootstrap3') }}
</p>