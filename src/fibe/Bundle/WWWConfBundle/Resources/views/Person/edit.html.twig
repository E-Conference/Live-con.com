{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block body %}
{{ parent() }}

    <h1>Person edit</h1>

<div class="row">
  <div class="col-lg-2"></div>
  <div class="col-lg-9">
    <form action="{{ path('person_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <div class="row-fluid">
          <div class="col-lg-4"></div>
          <div class="col-lg-2">
            </br><button type="submit" class="btn btn-default"><i class="icon-ok"></i></button>    
          </div>
    </div>
    </form>

  </div>
</div>
     <div class="row">
        <div class="col-lg-2"></div>
          <div class="btn-group">
            <form action="{{ path('person_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
                 <button type="submit" class="btn btn-danger"><i class="icon-remove"></i></button>
                  <a type="button" class="btn btn-warning " href="{{ path('person_index') }}">
                    <i class="icon-th-list"></i>
                </a>
            </form>
          </div>
    </div></br>
   


<script src="{{ asset('bundles/fibewwwconf/js/bootstrap-datetimepicker.min.js') }}" type="text/javascript" ></script>  
<script src="{{ asset('bundles/fibewwwconf/js/datepickerTools.js') }}" type="text/javascript" ></script>
<script type="text/javascript" >
    $(document).ready(function(){ 
        $('.datetimepicker').datetimepicker({
            format: 'dd/mm/yyyy hh:ii',
            autoclose: true,
        });
    });

</script>    
{% endblock %}
