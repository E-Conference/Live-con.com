{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block title %}Index{% endblock title %}

{% block body %}
{{ parent() }}
<div class="page-header">
     <div class="row">
        <div class="col-lg-2">
            <h1>{% trans %}Persons{% endtrans %}</h1>
        </div>
        <div class="col-lg-4">
            <a class="btn btn-info" href="{{ path('schedule_person_new') }}">
                 <i class="icon-plus"></i>
            </a>
        </div>
    </div>
</div>
    
    <table class="table table-hover records_list">
        <thead>
            <tr>
            
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Schedule Acces</th>
                <th>Schedule Admin</th>
                <th>Acces Data Paper</th>
                <th>Data Paper Admin</th>
                <th>Organization</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('schedule_person_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.flagschedule }}</td>
                <td>{% if entity.flagscheduleadmin %}<i class="icon-user"></i>{% endif %}</td>
                <td>{{ entity.flagdata }}</td>
                <td>{% if entity.flagdataadmin %}<i class="icon-user"></i>{% endif %}</td>
                <td>{{ entity.organization }}</td>
                <td>
                    <a class="btn btn-default" href="{{ path('schedule_person_show', { 'id': entity.id }) }}">
                        <i class="icon-eye-open"></i>
                    </a>
                   
                    <a class="btn btn-warning" href="{{ path('schedule_person_edit', { 'id': entity.id }) }}">
                         <i class="icon-edit"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
