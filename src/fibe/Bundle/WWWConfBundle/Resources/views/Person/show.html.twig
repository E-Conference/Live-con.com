{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block body %}
{{ parent() }}
<div class="container">
    <div class="row center">
    <h1>Person</h1>
    <table class="table table-hover record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Family name</th>
                <td>{{ entity.familyName }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ entity.age }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Organization</th>
                <td>{{ entity.organizations.name }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{ entity.img }} " height="10%" width="10%"></td>
            </tr>
            <tr>
                <th>Page</th>
                <td>{{ entity.page }}</td>
            </tr>
        </tbody>
    </table>

         <a class="btn btn-warning" href="{{ path('schedule_person_index') }}">
            <i class="icon-th-list"></i> List
        </a>
         <a  class="btn btn-warning" href="{{ path('schedule_person_edit', { 'id': entity.id }) }}">
            <i class="icon-edit"></i> Edit
         </a>
        <form action="{{ path('schedule_person_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger"> <i class="icon-trash"></i></button>
        </form>
 </div>
</div>
{% endblock %}
