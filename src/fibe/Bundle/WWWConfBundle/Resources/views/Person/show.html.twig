{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block title %}Person detail{% endblock title %}

{% block centerPanel %}
    {{ parent() }}
    <h1>Person</h1>
     <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-6">
            <h2> {{ entity.name }}</h2>
            <table class="table table-hover record_properties">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ entity.name }}</td>
                    </tr>
                    <tr>
                        <th>Family name</th>
                        <td>{{ entity.familyName }}</td>
                    </tr>
                    <tr>
                        <th>Age</th>
                        <td>{{ entity.age }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ entity.email }}</td>
                    </tr>
                    <tr>
                        <th>Organization</th>
                        <td> {% for organization in entity.organizations %}
                              <li>
                                <a href="{{ path('schedule_organization_show', { 'id': organization.id }) }}">
                                   {{ organization.name|e }}
                                </a>
                              </li>
                              {% endfor %}
                        </td>
                    </tr>
                     <tr>
                        <th>Papers</th>
                        <td> {% for paper in entity.papers %}
                              <li>
                                <a href="{{ path('schedule_paper_show', { 'id': paper.id }) }}">
                                    {{ paper.title|e }}
                                </a>
                              </li>
                              {% endfor %}
                        </td>
                    </tr>
                    <tr>
                        <th>Social Accounts</th>
                        <td> {% for account in entity.accounts %}
                              <li>{{ account.socialService.name|e }} : {{ account.accountName|e }} </li>
                              {% endfor %}
                        </td>
                    </tr>
                    <tr>
                        <th>Photo</th>
                        <td><img src="{{ entity.img }} " height="10%" width="20%"></td>
                    </tr>
                    <tr>
                        <th>Page</th>
                        <td>{{ entity.page }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

   <div class="row">
         <div class="col-lg-6"></div>
              <div class="col-lg-2 btn-group">
                  <a type="button" href="{{ path('schedule_person_index') }}" class="btn btn-warning">
                        <i class="fa fa-list"></i>
                  </a>
                   <a href="{{ path('schedule_person_edit', { 'id': entity.id }) }}" class="btn btn-success edit">
                         <i class="fa fa-pencil"></i>
                   </a>
                   <form action="{{ path('schedule_person_delete', { 'id': entity.id }) }}" method="post">
                      <input type="hidden" name="_method" value="DELETE" />
                        {{ form_widget(delete_form) }}
                    <button type="submit" class="btn btn-danger delete">
                        <i class="fa fa-trash-o"></i>
                    </button>
                  </form> 
              </div>    
    </div>

    
{% endblock %}
