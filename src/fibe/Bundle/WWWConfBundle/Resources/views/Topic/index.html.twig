{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block title %}Index{% endblock title %}

{% block body %}
{{ parent() }}
 {% block center %}
<div class="container">
    <div class="row center">
    <div class="page-header">
         <div class="row">
            <div class="col-lg-2">
                <h1>{% trans %}Topics{% endtrans %}</h1>
            </div>
            <div class="col-lg-4">
                <a class="btn btn-info btn-create" href="{{ path('schedule_topic_new') }}">
                     <i class="icon-plus"></i>
                </a>
            </div>
        </div>
    </div>
        
    <table class="table table-hover records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('schedule_topic_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                        <a class="btn btn-default" href="{{ path('schedule_topic_show', { 'id': entity.id }) }}">
                            <i class="icon-eye-open"></i>
                        </a>
                       
                        <a class="btn btn-warning" href="{{ path('schedule_topic_edit', { 'id': entity.id }) }}">
                             <i class="icon-pencil"></i>
                        </a>
                    </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
{% endblock %} 
{% endblock %} 