{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block title %}Topic detail{% endblock title %}

{% block centerPanel %}
    {{ parent() }}
    <h1>Topic</h1>
     <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-6">
            <h2> {{ entity.name }}</h2>
            <table class="table table-hover record_properties">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ entity.name }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

   <div class="row">
         <div class="col-lg-6"></div>
              <div class="col-lg-2 btn-group">
                  <a type="button" href="{{ path('schedule_topic') }}" class="btn btn-warning">
                        <i class="fa fa-list"></i>
                  </a>
                   <a href="{{ path('schedule_topic_edit', { 'id': entity.id }) }}" class="btn btn-success edit">
                         <i class="fa fa-pencil"></i>
                   </a>
                   <form action="{{ path('schedule_topic_delete', { 'id': entity.id }) }}" method="post">
                      <input type="hidden" name="_method" value="DELETE" />
                        {{ form_widget(delete_form) }}
                    <button type="submit" class="btn btn-danger delete">
                        <i class="fa fa-trash-o"></i>
                    </button>
                  </form> 
              </div>    
        </div>

{% endblock %}
