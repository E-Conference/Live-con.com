
{% extends "fibeWWWConfBundle::base.html.twig" %}

{% block title %}New topic{% endblock title %}

{% block centerPanel %}
    {{ parent() }}
    <h1>Topic Creation</h1>

    <div class="row">
     <div class="col-lg-9"></div>
          <div class="col-lg-2 btn-group">
              <a type="button" href="{{ path('schedule_topic') }}" class="btn btn-warning">
                    <i class="fa fa-list"></i>
              </a>
          </div>    
    </div>     

      <div class="row"> 
          <div class="col-lg-4"></div>
          <div class="col-lg-4">  
              <form action="{{ path('schedule_topic_create') }}" method="post" {{ form_enctype(form) }}> 
                  {{ form_widget(form) }} 
                   
              <br/>
               <button type="submit" class="btn btn-block btn-success">
                        <i class="fa fa-check"></i>
              </button>
              </form>
          </div>
      </div> 


{% endblock %}

