{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block body %}

  {{ parent() }}


  <div class="page-header">
    <div class="row">
      <div class="col-lg-2">
        <h1>{% trans %}Status{% endtrans %}</h1>
      </div>
      <div class="col-lg-4">
        <a class="btn btn-info btn-create" href="{{ path('schedule_status_new') }}">
          <i class="fa fa-plus"></i>
        </a>
      </div>
    </div>
  </div>


  <table class="table table-hover records_list">
    <thead>
    <tr>
      <th>Id</th>
      <th>Value</th>
      <th>CalendarEntity</th>
      <th colspan="3">{% trans %}Actions{% endtrans %}</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in pager.currentPageResults %}
      <tr>
        <td><a href="{{ path('schedule_status_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
        <td>{{ entity.value }}</td>
        <td>{{ entity.discr }}</td>
        <td>
          <a class="btn btn-success btn-block" href="{{ path('schedule_status_show', { 'id': entity.id }) }}"><i
                class="fa fa-eye"></i></a>
        </td>
        <td>
          <a class="btn btn-block btn-warning" href="{{ path('schedule_status_edit', { 'id': entity.id }) }}"><i
                class="fa fa-pencil-square-o"></i></a>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  <p>
    {{ pagerfanta(pager, 'twitter_bootstrap3') }}
  </p>

{% endblock body %}
