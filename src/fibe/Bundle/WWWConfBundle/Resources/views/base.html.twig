<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %} - WWWConf</title>
        <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/fibewwwconf/css/bootstrap.min.css') }}" /> 
        <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.1/themes/base/jquery-ui.css">
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/fibewwwconf/css/datetimepicker.css') }}" /> 
        <link rel="stylesheet" href="{{ asset('bundles/fibewwwconf/css/font-awesome.min.css') }}"> 
        <style type="text/css">
            
             #bootstrap_alert{
                position: fixed;
                top: 5em;
                right: 2em ;
                min-width: 20em;
                z-index: 1000; 

            }
         </style>

        {% block stylesheets %}
         
        {% endblock %}
        <script type="text/javascript" src="{{ asset('jquery.min.js') }}"></script>
        
        <script type="text/javascript" src="{{ asset('bundles/fibewwwconf/js/bootstrap.min.js') }}"></script>
        <script type="text/javascript" src="http://code.jquery.com/ui/1.10.1/jquery-ui.js"></script>
            
        <script src="{{ asset('bundles/fibewwwconf/js/json2.js') }}" type="text/javascript" ></script>
        <script type="text/javascript" >
            var bootstrapAlertTimeout;
            function bootstrapAlert(type,msg,title,icon){
                var $body = $("body");
                var $bootstrapAlert = $('#bootstrap_alert').length < 1 ? $('<div id="bootstrap_alert"></div>').prependTo($body) : $('#bootstrap_alert');
                
                if(type== "stop"){
                  clearInterval(bootstrapAlertTimeout);
                  $bootstrapAlert.fadeOut(1500);
                } 
                $bootstrapAlert.attr("class","")
                               .addClass("alert alert-"+type) 
                               .html('<button type="button" class="close" data-dismiss="alert">&times;</button>')
                               .append(' <strong> '+title+' </strong>')
                               .text(msg)
                               .prepend(icon ? $(icon).addClass("icon-2x").css("margin-right","0.5em") : "");
                if(!$bootstrapAlert.is(":visible"))$bootstrapAlert.hide().fadeIn();
                clearInterval(bootstrapAlertTimeout);
                bootstrapAlertTimeout=setInterval(function(){
                         $bootstrapAlert.fadeOut(1500);
                    },5000);
            }
        </script>
        {% block javascripts %}
        {% endblock%}
    </head>
    <body>
        <div class="symfony-content">
            {% include "fibeWWWConfBundle::adminmenu.html.twig" %}
            {% for flashMessage in app.session.flashbag.get('info') %}
                <script type="text/javascript" >
                    bootstrapAlert("info","{{ flashMessage }}","Info");
                </script> 
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success">
                <script type="text/javascript" >
                bootstrapAlert("success","{{ flashMessage }}","Success",'<i class="icon-info"></i> '); 
                </script> 
                    {{ flashMessage }}
                </div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('error') %}
                <script type="text/javascript" >
                bootstrapAlert("error","{{ flashMessage }}","Error",'<i class="icon-warning-sign"></i> '); 
                </script> 
            {% endfor %}
            
            {% block body %} 
            {% endblock %}
        </div> 
    </body> 
        
</html>










