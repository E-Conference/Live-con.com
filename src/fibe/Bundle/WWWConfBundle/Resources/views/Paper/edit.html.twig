{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block title %}Paper edit{% endblock title %}

{% block centerPanel %}
    {{ parent() }}
    <h1>Paper edit</h1>
     <div class="row">
         <div class="col-lg-5"></div>
              <div class="col-lg-2 btn-group">
                  <a type="button" href="{{ path('schedule_paper') }}" class="btn btn-warning">
                        <i class="fa fa-list"></i>
                  </a>
                   <form action="{{ path('schedule_paper_delete', { 'id': entity.id }) }}" method="post">
                      <input type="hidden" name="_method" value="DELETE" />
                        {{ form_widget(delete_form) }}
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash-o"></i>
                    </button>
                  </form> 
              </div>    
        </div>     

    <form action="{{ path('schedule_paper_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
            <div class="row">
               <div class="col-lg-2"></div>
               <div class="col-lg-4">
                 {{ form_widget(edit_form) }}
                 {{ form_errors(edit_form) }}
                 </br>
                  <button type="submit" class="btn btn-block btn-success">
                            <i class="fa fa-check"></i>
                  </button>
            </div>
    </form>

{% endblock %}
