{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block body %}
{{ parent() }}
<div class="row">
        <div class="col-lg-2">
            <h1>{% trans %}Papers{% endtrans %}</h1>
        </div>
        <div class="col-lg-4">
            <a class="btn btn-info" href="{{ path('schedule_location_new') }}">
                 <i class="icon-plus"></i>
            </a>
        </div>
    </div>

   

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Label</th>
                <th>Title</th>
                <th>Abstract</th>
                <th>Month</th>
                <th>Year</th>
                <th>Url_pdf</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('paper_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.label }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.abstract }}</td>
                <td>{{ entity.month }}</td>
                <td>{{ entity.year }}</td>
                <td>{{ entity.urlpdf }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('paper_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('paper_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('paper_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
