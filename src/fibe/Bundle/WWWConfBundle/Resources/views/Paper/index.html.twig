{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block body %}
{{ parent() }}

<div class="container">
    <div class="row center">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-2">
                    <h1>{% trans %}Papers{% endtrans %}</h1>
                </div>
                <div class="col-lg-4">
                    <a class="btn btn-info btn-create" href="{{ path('schedule_paper_new') }}">
                         <i class="icon-plus"></i>
                    </a>
                </div>
            </div>
        </div>

   

    <table class="records_listb table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Abstract</th>
                <th>Date</th>
                <th>Url</th>
                <th>Subjects</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('schedule_paper_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.abstract }}</td>
                <td>{{ entity.publishDate }}</td>
                <td>{{ entity.url }}</td>
                <td><ul> {% for topic in entity.topics  %}
                          <li>  {{ topic.name|e }}</li>
                         {% endfor %}
                </ul></td>
                <td>
                    <a class="btn btn-large btn-default" href="{{ path('schedule_paper_show', { 'id': entity.id }) }}"><i class="icon-eye-open"></i></a> 
                    <a class="btn btn-large btn-warning" href="{{ path('schedule_paper_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i></a>
                </td> 
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
    {% endblock %}
