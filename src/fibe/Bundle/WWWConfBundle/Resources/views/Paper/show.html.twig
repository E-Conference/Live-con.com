{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block title %}Paper detail{% endblock title %}

{% block centerPanel %}
  {{ parent() }}
  <div class="row page-top-header ">
    <div class="page-title col-xs-5  col-sm-4 col-md-3 col-lg-2">
      <span>Publication details</span>
      <a class="btn btn-info" href="{{ path('documentation', { 'anchor': 'Paper' }) }}" title="Help">
        <i class="fa fa-question"></i>
      </a>
    </div>

    <div class="col-xs-2 col-sm-4 col-md-6 col-lg-8">
    </div>
    <div class="page-btn-list col-xs-5  col-sm-4 col-md-3 col-lg-2">
      <a type="button" href="{{ path('schedule_paper') }}" class="btn btn-warning" title="Go back to the list">
        <i class="fa fa-list"></i>
      </a>
      {% if is_granted('EDIT', entity) %}
        <a href="{{ path('schedule_paper_edit', { 'id': entity.id }) }}" class="btn btn-success edit"
           title="Edit publication">
          <i class="fa fa-pencil"></i>
        </a>
      {% endif %}
      {% if is_granted('DELETE', entity) %}
        <form action="{{ path('schedule_paper_delete', { 'id': entity.id }) }}" method="post">
          <input type="hidden" name="_method" value="DELETE"/>
          {{ form_widget(delete_form) }}
          <button type="submit" class="btn btn-danger delete" title="Remove publication">
            <i class="fa fa-trash-o"></i>
          </button>
        </form>
      {% endif %}
    </div>
  </div>
  <div class="row page-content">

    <div class="row">

      <div class="col-lg-12">
        <h2> {{ entity.title }}</h2>
        <table class="table table-hover">
          <tbody>
          <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
          </tr>
          <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
          </tr>
          <tr>
            <th>Abstract</th>
            <td><textarea style="width:100%; height:50px;" disabled="true">{{ entity.abstract }}</textarea></td>
          </tr>
          <tr>
            <th>Publish Date</th>
            <td>{{ entity.publishDate }}</td>
          </tr>
          <tr>
            <th>Publisher</th>
            <td>{{ entity.publisher }}</td>
          </tr>
          <tr>
            <th>Url</th>
            <td>{{ entity.url }}</td>
          </tr>
          <tr>
            <th>Topics</th>
            <td>
              {% for topic in entity.topics %}
                <li>
                  <a href="{{ path('schedule_topic_show', { 'id': topic.id }) }}">
                    {{ topic.name|e }}
                  </a>
                </li>
              {% endfor %}
            </td>
          </tr>
          <tr>
            <th>Authors</th>
            <td>
              {% for author in entity.authors %}
                <li>
                  <a href="{{ path('schedule_person_show', { 'id': author.id }) }}">
                    {{ author.name|e }}
                  </a>
                </li>
              {% endfor %}
            </td>
          </tr>
          <tr>
            <th>Presented At</th>
            <td>
              {% for event in entity.events %}
                <li>
                  <a href="{{ path('schedule_confevent_show', { 'id': event.id }) }}">
                    {{ event.getSummary() }}
                  </a>
                </li>
              {% endfor %}
            </td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

{% endblock %}
