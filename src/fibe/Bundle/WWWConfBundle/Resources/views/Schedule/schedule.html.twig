      for(var i =0; i < locations.length;i++){
        $locationSelect.append('<option value="'+locations[i].id+'">'+locations[i].name+'</option>');
      }

        /*-----------------------------------------------------------------------------------------------------*/
        /*------------------------------------- end initialize filters ----------------------------------------*/ 
