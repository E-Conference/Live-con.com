         $.post('{{path("schedule_confevent_addPaper") }}',               
                  {id_entity : '{{entity.id}}', id_paper: id_paper},
              function(response){
                     $('#paper_related_list').html(response);
                  
              }, "html");    
         });

      //listen for the form beeing submitted
     $("select[id='form_topics']").change(function(){
