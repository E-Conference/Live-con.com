{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block title %}Organization detail{% endblock title %}

{% block centerPanel %}
  {{ parent() }}
  <div class="row page-top-header ">
    <div class="page-title col-xs-5  col-sm-4 col-md-3 col-lg-2">
      <span>Organization details</span>
      <a class="btn btn-info" href="{{ path('documentation', { 'anchor': 'Organization' }) }}" title="Help">
        <i class="fa fa-question"></i>
      </a>
    </div>

    <div class="col-xs-2 col-sm-4 col-md-6 col-lg-8">
    </div>
    <div class="page-btn-list col-xs-5  col-sm-4 col-md-3 col-lg-2">
      <a type="button" href="{{ path('schedule_organization_index') }}" class="btn btn-warning"
         title="Go back to the list">
        <i class="fa fa-list"></i>
      </a>
      {% if is_granted('EDIT', entity) %}
        <a href="{{ path('schedule_organization_edit', { 'id': entity.id }) }}" class="btn btn-success edit"
           title="Edit organization">
          <i class="fa fa-pencil"></i>
        </a>
      {% endif %}
      {% if is_granted('DELETE', entity) %}
        <form action="{{ path('schedule_organization_delete', { 'id': entity.id }) }}" method="post">
          <input type="hidden" name="_method" value="DELETE"/>
          {{ form_widget(delete_form) }}
          <button type="submit" class="btn btn-danger delete" title="Remove organization">
            <i class="fa fa-trash-o"></i>
          </button>
        </form>
      {% endif %}
    </div>
  </div>
  <div class="row page-content">
    <div class="row">

      <div class="col-lg-12">
        <h2> {{ entity.name }}</h2>
        <table class="table table-hover">
          <tbody>
          <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
          </tr>
          <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
          </tr>
          <tr>
            <th>Homepage</th>
            <td>{{ entity.page }}</td>
          </tr>
          <tr>
            <th>Country</th>
            <td>{{ entity.country }}</td>
          </tr>
          <tr>
            <th>Members</th>
            <td> {% for person in entity.members %}
                <li>
                  <a href="{{ path('schedule_person_show', { 'id': person.id }) }}">
                    {{ person.name }}
                  </a>
                </li>
              {% endfor %}
            </td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
{% endblock %}
