{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block title %}Organization{% endblock title %}

{% block centerPanel %}
    {{ parent() }}
        <div class="row page-top-header ">
            <div class="page-title col-xs-2  col-xs-5  col-sm-4 col-md-3 col-lg-2">
                <span>List</span>
            </div>

            <div class=" col-xs-2 col-sm-4 col-md-6 col-lg-8">
            </div>
            <div class="page-btn-list  col-xs-5  col-sm-4 col-md-3 col-lg-2">
                <a class="btn btn-info btn-create create" href="{{ path('schedule_organization_new') }}" title="Add an organization">
                     <i class="fa fa-plus"></i>
                </a>
            </div>
        </div>
        <div class="row page-content">

            {% include "fibeWWWConfBundle:Filters:filters.html.twig"%}
            <div id="organization_list">
               {% include "fibeWWWConfBundle:Organization:list.html.twig" %}
            </div>
        </div>
{% endblock %}

{% block javascripts_page %}
<script type="text/javascript">

    function filter(){
        $datas = $("#filter_form").serialize();

        //start send the post request
         $.post("{{path('schedule_organization_filter')}}",               
                 $datas, 
              function(response){
                     $('#organization_list').html(response);
                  
              }, "html");    
          return false;
    };
</script>

{% endblock javascripts_page %}
