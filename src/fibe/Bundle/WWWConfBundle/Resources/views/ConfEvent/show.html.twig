{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block body %}
{{ parent() }}

 <h1>ConfEvent</h1>
  <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-6">
            <h2> {{ entity.summary }}</h2>
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Createdat</th>
                        <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Startat</th>
                        <td>{{ entity.startAt|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Lastmodifiedat</th>
                        <td>{{ entity.lastModifiedAt|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Summary</th>
                        <td>{{ entity.summary }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ entity.description }}</td>
                    </tr>
                    <tr>
                        <th>Comment</th>
                        <td>{{ entity.comment }}</td>
                    </tr>
                    <tr>
                        <th>Url</th>
                        <td>{{ entity.url }}</td>
                    </tr>
                    <tr>
                        <th>Organizer</th>
                        <td>{{ entity.organizer }}</td>
                    </tr>
                    <tr>
                        <th>Revisionsequence</th>
                        <td>{{ entity.revisionSequence }}</td>
                    </tr>
                    <tr>
                        <th>Contacts</th>
                        <td>{{ entity.contacts }}</td>
                    </tr>
                    <tr>
                        <th>Excludeddates</th>
                        <td>{{ entity.excludedDates }}</td>
                    </tr>
                    <tr>
                        <th>Includeddates</th>
                        <td>{{ entity.includedDates }}</td>
                    </tr>
                    <tr>
                        <th>Classification</th>
                        <td>{{ entity.classification }}</td>
                    </tr>
                    <tr>
                        <th>Priority</th>
                        <td>{{ entity.priority }}</td>
                    </tr>
                    <tr>
                        <th>Resources</th>
                        <td>{{ entity.resources }}</td>
                    </tr>
                    <tr>
                        <th>Duration</th>
                        <td>{{ entity.duration }}</td>
                    </tr>
                    <tr>
                        <th>Istransparent</th>
                        <td>{{ entity.isTransparent }}</td>
                    </tr>
                    <tr>
                        <th>Endat</th>
                        <td>{{ entity.endAt|date('Y-m-d H:i:s') }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

     <div class="row">
     <div class="col-lg-6"></div>
          <div class="col-lg-2 btn-group">
              <a type="button" href="{{ path('schedule_event') }}" class="btn btn-warning">
                    <i class="icon-th-list"></i>
              </a>
               <a href="{{ path('schedule_confevent_edit', { 'id': entity.id }) }}" class="btn btn-success">
                     <i class="icon-edit"></i>
               </a>
               <form action="{{ path('schedule_confevent_delete', { 'id': entity.id }) }}" method="post">
                  <input type="hidden" name="_method" value="DELETE" />
                    {{ form_widget(delete_form) }}
                <button type="submit" class="btn btn-danger">
                    <i class="icon-remove"></i>
                </button>
              </form> 
          </div>    
    </div>     </br>

<h2>Event Relation</h2>
  <div class="row">
       <div class="col-lg-1"></div>
       <div class="col-lg-8">
            <h3>Themes</h3></br>
            {% include "fibeWWWConfBundle:ConfEvent:themeRelation.html.twig" %}
       </div>
 </div>

<div class="row">
       <div class="col-lg-1"></div>
       <div class="col-lg-8">
            <h3>Paper</h3></br>
            {% include "fibeWWWConfBundle:ConfEvent:paperRelation.html.twig" %}
      </div>
</div>

<div class="row">
       <div class="col-lg-1"></div>
       <div class="col-lg-8">
            <h3>Person</h3></br>
            {% include "fibeWWWConfBundle:ConfEvent:personRelation.html.twig" %}
       </div>
</div>
      </br> 

{% endblock %}
