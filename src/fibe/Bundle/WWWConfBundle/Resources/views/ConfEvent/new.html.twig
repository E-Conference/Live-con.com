{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block body %}
{{ parent() }}
    <h1>ConfEvent creation</h1>

    <form action="{{ path('schedule_confevent_create') }}" method="post" {{ form_enctype(form) }}>
     <div class="row-fluid">
        <div class="col-lg-2"></div>
        <div class="col-lg-4">
            {{ form_row(form.summary) }}
            {{ form_row(form.categories) }}
            {{ form_row(form.startAt) }}
            {{ form_row(form.url) }}
            {{ form_row(form.parent) }}
            {{ form_row(form.description) }}
            {{ form_row(form.comment) }}
        </div>
        <div class="col-lg-4">
            {{ form_row(form.organizer) }}
            {{ form_row(form.contacts) }}
            {{ form_row(form.location) }}
            {{ form_row(form.priority) }}
            {{ form_row(form.resources) }}
            {{ form_row(form.endAt) }}
            {{ form_row(form.isTransparent) }}
            {{ form_row(form.wwwConf) }}
             </br>
              <div class="row-fluid">
                <div class="col-lg-8"></div>
                <div class="col-lg-2">
                 
                       <a type="button" href="{{ path('schedule_event') }}" class="btn btn-warning">
                        <i class="icon-th-list"></i>
                    </a>
                </div>
                <div class="col-lg-1">
                 <button type="submit" class="btn btn-default">
                          <i class="icon-ok"></i>
                    </button> 
                   </div> 
                </div>
              </div>  
         
        </div>
     </div>
    </form>

{% endblock %}
