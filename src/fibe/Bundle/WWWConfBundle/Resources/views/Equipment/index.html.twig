{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Equipment list</h1>
	
	 <a  class="btn btn-info" href="{{ path('equipment_new') }}">
                 <span class="glyphicon glyphicon-plus glyphicon-white"></span>
     </a>
	 
    <table class=" table-hover records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Icon</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('equipment_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.label }}</td>
                <td>{{ entity.icon }}</td>
                <td>
                <ul>
                    <li>
                        <a class="btn btn-default" href="{{ path('equipment_show', { 'id': entity.id }) }}"> <span class="glyphicon glyphicon-eye-open"></span></a>
                    </li>
                    <li>
                        <a class="btn btn-warning" href="{{ path('equipment_edit', { 'id': entity.id }) }}"> <span class="glyphicon glyphicon-edit glyphicon-white"></span></a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a  class="btn btn-info" href="{{ path('equipment_new') }}">
                 <span class="glyphicon glyphicon-plus glyphicon-white"></span>
            </a>
        </li>
    </ul>
    {% endblock %}
