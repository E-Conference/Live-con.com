{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block body -%}
    <h1>Equipment edit</h1>

    <form action="{{ path('schedule_equipment_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>

            <button type="submit" class="btn btn-default"><i class="icon-ok"></i></button>

        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a class="btn btn-warning" href="{{ path('equipment') }}">
            <i class="icon-th-list"></i>
        </a>
    </li>
    <li>
        <form action="{{ path('schedule_equipment_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}

            <button type="submit" class="btn btn-danger"> <i class="icon-remove"></i></button>
        </form>
    </li>
</ul>
{% endblock %}
