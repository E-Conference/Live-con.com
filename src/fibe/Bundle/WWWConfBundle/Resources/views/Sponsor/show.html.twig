{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block title %}Sponsor detail{% endblock title %}

{% block centerPanel %}
  <div class="row page-top-header ">
    <div class="page-title col-xs-5  col-sm-4 col-md-3 col-lg-2">
      <span>Sponsor details</span>
      {#<a class="btn btn-info" href="{{ path('documentation', { 'anchor': 'Topic' }) }}" title="Help">#}
      {#<i class="fa fa-question"></i>#}
      {#</a>#}
    </div>

    <div class="col-xs-2 col-sm-4 col-md-6 col-lg-8">
    </div>
    <div class="page-btn-list col-xs-5  col-sm-4 col-md-3 col-lg-2">
      <a type="button" href="{{ path('schedule_sponsor') }}" class="btn btn-warning" title="Go back to the list">
        <i class="fa fa-list"></i>
      </a>
      {% if is_granted('EDIT', entity) %}
        <a href="{{ path('schedule_sponsor_edit', { 'id': entity.id }) }}" class="btn btn-success edit"
           title="Edit sponsor">
          <i class="fa fa-pencil"></i>
        </a>
      {% endif %}
      {% if is_granted('DELETE', entity) %}
        <form action="{{ path('schedule_sponsor_delete', { 'id': entity.id }) }}" method="post">
          <input type="hidden" name="_method" value="DELETE"/>
          {{ form_widget(delete_form) }}
          <button type="submit" class="btn btn-danger delete" title="Remove sponsor">
            <i class="fa fa-trash-o"></i>
          </button>
        </form>
      {% endif %}
    </div>
  </div>
  <div class="row page-content">

    <div class="col-lg-12">
      <h2> {{ entity.name }}</h2>
      <table class="table table-hover record_properties">
        <tbody>
        <tr>
          <th>Logo</th>
          {% if entity.logoPath is null %}
            <td><em>No logo uploaded</em></td>
          {% else %}
            <td><a href="{{ path('schedule_sponsor_show', { 'id': entity.id }) }}"><img
                    src="{{ asset('uploads/sponsors/') }}{{ entity.logoPath }}" style="height:100px;width:auto;"/></a>
            </td>
          {% endif %}
        </tr>
        <tr>
          <th>Name</th>
          <td>{{ entity.name }}</td>
        </tr>
        <tr>
          <th>Url</th>
          <td><a href="{{ entity.url }}">{{ entity.url }}</a></td>
        </tr>
        <tr>
          <th>Message to display</th>
          <td>{{ entity.description }}</a></td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}
