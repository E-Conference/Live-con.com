{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block title %}Role detail{% endblock title %}

{% block centerPanel %}
    {{ parent() }}
    <div class="row page-top-header ">
        <div class="page-title col-xs-5  col-sm-4 col-md-3 col-lg-2">
            <span>Role type details</span>
            <a class="btn btn-info" href="{{ path('documentation', { 'anchor': 'RoleType' }) }}" title="Help">
                <i class="fa fa-question"></i>
            </a>
        </div>

        <div class="col-xs-2 col-sm-4 col-md-6 col-lg-8">
        </div>
        <div class="page-btn-list col-xs-5  col-sm-4 col-md-3 col-lg-2">
            <a type="button" href="{{ path('schedule_roletype_index') }}" class="btn btn-warning" title="Go back to the list">
                <i class="fa fa-list"></i>
            </a>
            <a href="{{ path('schedule_roletype_edit', { 'id': entity.id }) }}" class="btn btn-success edit" title="Edit role type">
                <i class="fa fa-pencil"></i>
            </a>
            <form action="{{ path('schedule_roletype_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
                <button type="submit" class="btn btn-danger delete"  title="Remove role type">
                    <i class="fa fa-trash-o"></i>
                </button>
            </form>
        </div>
    </div>
    <div class="row page-content">
        <div class="col-lg-12">
            <h2> {{ entity.name }}</h2>
            <table class="table table-hover record_properties">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
