{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block body -%}
{{ parent() }}
<div class="container">
    <div class="row center">
    <h1>Theme</h1>

    <table class="table table-hover record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ entity.libelle }}</td>
            </tr>
        </tbody>
    </table> 
    <a class="btn btn-warning"  href="{{ path('schedule_theme') }}">
            <i class="icon-th-list"></i> List
    </a> 
    <a class="btn btn-warning"  href="{{ path('schedule_theme_edit', { 'id': entity.id }) }}">
            <i class="icon-edit"></i> Edit 
    </a> 
    <form action="{{ path('schedule_theme_delete', { 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit">Delete</button>
    </form>
</div>
</div> 
{% endblock %}
