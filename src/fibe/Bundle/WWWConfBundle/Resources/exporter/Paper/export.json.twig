{
     "id": "{{ entity.id }}",
     "title": "{{ entity.title }}",
     "abstract": "{{ entity.abstract }}",
     "publishDate": "{{ entity.publishDate }}" , 
     "url": "{{ entity.url }}" ,       
     "publisher": "{{ entity.publisher }}" , 
     "subject":
            [
            {% for topic in entity.subject %}
                {% if loop.first %}
                { "id": "{{ topic.id }}", "name": "{{ topic.name }}"}
                {% else %}
                ,{ "id": "{{ topic.id }}", "name": "{{ topic.name }}"}
                {% endif %}
            {% endfor %}
            ],
     "authors":
            [
            {% for author in entity.authors %}
                {% if loop.first %}
                { "id": "{{ author.id }}", "name": "{{ author.name }}"}
                {% else %}
                ,{ "id": "{{ author.id }}", "name": "{{ author.name }}"}
                {% endif %}
            {% endfor %}
            ]
         
}
