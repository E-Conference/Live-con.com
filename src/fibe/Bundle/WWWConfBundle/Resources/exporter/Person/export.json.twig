    "image"       : {% if entity.img != null %}{{entity.img|json_encode|raw()}}{% else %}""{% endif %},
    {% spaceless %}
    "roles":
    [
    {% for role in entity.roles %}
        {% if loop.first %}{% else %},{% endif %}
