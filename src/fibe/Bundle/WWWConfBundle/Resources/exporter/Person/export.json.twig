                { "id": "{{ organization.id }}", "name": {% if organization.name != null %}{{organization.name|json_encode|raw()}}{% else %}""{% endif %}}
                {% else %}
                ,{ "id": "{{ organization.id }}", "name": {% if organization.name != null %}{{organization.name|json_encode|raw()}}{% else %}""{% endif %}}
