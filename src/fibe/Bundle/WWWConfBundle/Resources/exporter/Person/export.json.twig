{
    "id"          : "{{ entity.id }}",
    "email"       : "{% autoescape 'js' %}{{ entity.email }}{% endautoescape %}",
    "created_at"  : "{{ entity.createdAt | date('Y-m-d H:i') }}",
    "agent"       : "{{ entity.agent  }}",
    "title"       : "{% autoescape 'js' %}{{ entity.title  }}{% endautoescape %}",
    "first_name"  : "{% autoescape 'js' %}{{ entity.firstName }}{% endautoescape %}",
    "last_name"   : "{% autoescape 'js' %}{{ entity.lastName }}{% endautoescape %}",
    "name"        : "{% autoescape 'js' %}{{ entity.name }}{% endautoescape %}",
    "given_name"  : "{% autoescape 'js' %}{{ entity.givenName }}{% endautoescape %}",
    "slug"        : "{{ entity.slug }}",
    "description" : "{% autoescape 'js' %}{{ entity.description }}{% endautoescape %}",
    "homepage"    : "{% autoescape 'js' %}{{ entity.homepage }}{% endautoescape %}",
    "based_near"  : "{{ entity.based_near }}",
    "image"       : "{{ entity.image }}",
    {% spaceless %}
    "roles":
    [
    {% for role in entity.roles %}
        {% if loop.first %}{% else %},{% endif %}
        { 
            "id": "{{ role.id }}", 
            "type": "{{ role.type.name }}", 
            "event": {
                "id"  : "{{ role.event.id }}",
                "name": "{% autoescape 'js' %}{{ role.event.summary }}{% endautoescape %}"
            }
        }
    {% endfor %}
    ],
    {% endspaceless %}
     {% spaceless %}
     "organizations":
            [
            {% for organization in entity.organizations %}
                {% if loop.first %}
                { "id": "{{ organization.id }}", "name": "{{ organization.name}}"}
                {% else %}
                ,{ "id": "{{ organization.id }}", "name": "{{ organization.name}}"}
                {% endif %}
            {% endfor %}
            ] 
    {% endspaceless %}
} 