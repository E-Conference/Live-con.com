{% set enclosure = '"' %}
{% set delimiter = ';' %}

{% autoescape false %}
{% spaceless %}

{{ enclosure }}{{ entity.id }}{{ enclosure }}{{ delimiter }}
{{ enclosure }}{{ entity.summary }}{{ enclosure }}{{ delimiter }}
{{ enclosure }}{{ entity.createdAt | date('Y-m-d H:i') }}{{ enclosure }}{{ delimiter }}
{{ enclosure }}{{ entity.endAt | date('Y-m-d H:i') }}{{ enclosure }}{{ delimiter }}
{{ enclosure }}{{ entity.startAt | date('Y-m-d H:i') }}{{ enclosure }}{{ delimiter }}
{{ enclosure }}{{ entity.duration }}{{ enclosure }}{{ delimiter }}
{{ enclosure }}{{ entity.lastModifiedAt | date('Y-m-d H:i') }}{{ enclosure }}{{ delimiter }}
{{ enclosure }}{{ entity.description }}{{ enclosure }}{{ delimiter }}
{{ enclosure }}{{ entity.comment }}{{ enclosure }}{{ delimiter }}
{{ enclosure }}{{ entity.url }}{{ enclosure }}{{ delimiter }}
{{ enclosure }}{{ entity.organizer }}{{ enclosure }}{{ delimiter }}
{{ enclosure }}{{ entity.contacts }}{{ enclosure }}{{ delimiter }}
{{ enclosure }}{{ entity.location.id }}{{ enclosure }}{{ delimiter }}
{{ enclosure }}{{ entity.location.name }}{{ enclosure }}{{ delimiter }}
{{ enclosure }}{{ entity.location.description }}{{ enclosure }}{{ delimiter }}


{% for category in entity.categories %}
  {% if loop.first %}
    {{ enclosure }}{{ category }}{{ enclosure }}{{ delimiter }}
  {% endif %}
{% endfor %}

{% for role in entity.roles %}
  {% if loop.first %}{{ enclosure }}{% else %}|{% endif %}
  {{ role.type.name }} : {{ role.person.name }}
  {% if loop.last%}{{ enclosure }}{% else %}{% endif %}
{% endfor %}
{{ delimiter }}

{% endspaceless %}
{% endautoescape %}
