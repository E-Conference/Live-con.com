{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block title %}Authorization edit{% endblock title %}

{% block centerPanel %}
    {{ parent() }}
    <h1>{{ entity.user.username }}</h1>
   

    <form action="{{ path('schedule_authorization_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        <div class="row">
               <div class="col-lg-2"></div>
               <div class="col-lg-4">
                {{ form_widget(edit_form) }}
                </br>
                  <button type="submit" class="btn btn-block btn-success">
                            <i class="fa fa-check"></i>
                  </button>
            </div>
    </form>
    
{% endblock %}
