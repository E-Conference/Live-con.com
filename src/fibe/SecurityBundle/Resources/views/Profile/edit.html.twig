{% extends 'fibeSecurityBundle::base.html.twig' %}

{% block title %}Profile{% endblock title %}

{% block centerPanel %}

     <div class="row page-top-header ">
            <div class="page-title col-xs-5  col-sm-4 col-md-3 col-lg-2">
                <span>Edit profile</span>
            </div>

            <div class=" col-xs-2 col-sm-4 col-md-6 col-lg-8">
            </div>
      </div>
      <div class="row page-content">
       
        <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(formEdit) }} method="POST" class="fos_user_profile_edit">
        <div class="row">

           <div class="col-lg-12">
            {{ form_widget(formEdit) }}
            </div>
        </div>
          <br />
         <div class="row"> 

            <div class="col-lg-12">  
                <button class="btn btn-success btn-block" type="submit" > 
                    <i class="fa fa-check"></i>
                    {#{{ 'submit'|trans }}#}
                </button>
            </div>
        </div>
        </form>
     </div>
      <div class="row page-top-header ">
            <div class="page-title col-xs-5  col-sm-4 col-md-3 col-lg-2">
                <span>Change my password</span>
            </div>

            <div class=" col-xs-2 col-sm-4 col-md-6 col-lg-8">
            </div>
      </div>
      <div class="row page-content">
        <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(formPwd) }} method="POST" class="fos_user_change_password">
        <div class="row">

           <div class="col-lg-12">
            {{ form_widget(formPwd) }}
             </div>
        </div>
          <br />
         <div class="row"> 

            <div class="col-lg-12">  
                <button class="btn btn-success  btn-block" type="submit" > 
                    <i class="fa fa-check"></i>
                    {#{{ 'submit'|trans }}#}
                </button>
            </div>
        </div>
        </form>
    </div>

{% endblock  %}





 
