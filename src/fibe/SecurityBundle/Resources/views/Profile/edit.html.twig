{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block title %}Index{% endblock title %}
{% block body %}
{{ parent() }}
 
<div class="container">
  <div class="row center">
    <div>
        <header class="subhead" id="overview">
            <div class="page-header">
                    <h1>Profile</h1>
                  </div>
        </header>
        <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(formEdit) }} method="POST" class="fos_user_profile_edit">
        <div class="row">
           <div class="col-lg-2"></div>
           <div class="col-lg-4">
            {{ form_widget(formEdit) }}
            </div>
        </div></br>
         <div class="row"> 
           <div class="col-lg-2"></div>
            <div class="col-lg-4">  
                <button class="btn btn-success btn-block" type="submit" > 
                    <i class="icon-ok icon-white"></i>
                    {#{{ 'submit'|trans }}#}
                </button>
            </div>
        </div>
        </form>
    </div>
    <div>
        <header class="subhead" id="overview">
            <div class="page-header">
                    <h1>Change password</h1>
                  </div>
        </header>
        <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(formPwd) }} method="POST" class="fos_user_change_password">
        <div class="row">
           <div class="col-lg-2"></div>
           <div class="col-lg-4">
            {{ form_widget(formPwd) }}
             </div>
        </div></br>
         <div class="row"> 
           <div class="col-lg-2"></div>
            <div class="col-lg-4">  
                <button class="btn btn-success  btn-block" type="submit" > 
                    <i class="icon-ok icon-white"></i>
                    {#{{ 'submit'|trans }}#}
                </button>
            </div>
        </div>
        </form>
    </div>
  </div>
</div>
{% endblock body %}

{%  block javascripts %}  
{{ parent() }}
{% endblock %}




 
