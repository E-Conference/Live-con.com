{% extends "IDCISimpleScheduleBundle::adminbase.html.twig" %}

{% block body %}

{{ parent() }}

<div class="page-header">
  <h1>{% trans %}Edit{% endtrans %}</h1>
</div>

<form action="{{ path('admin_schedule_status_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn btn-primary">{% trans %}Edit{% endtrans %}</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a class="btn btn-list btn-warning" href="{{ path('admin_schedule_status') }}">
             <span class="class="glyphicon glyphicon-list glyphicon-white"></span>
        </a>
    </li> 
    <li>
        <form action="{{ path('admin_schedule_status_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger"> <span class="class="glyphicon glyphicon-remove glyphicon-white"></span></button>
        </form>
    </li>
</ul>
{% endblock body %}
