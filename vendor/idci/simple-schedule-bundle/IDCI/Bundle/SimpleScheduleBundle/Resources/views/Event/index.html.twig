{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block title %}Events{% endblock title %}

{% block centerPanel %}
  {{ parent() }}

         <div class="row page-top-header ">
            <div class="page-title col-xs-5  col-sm-4 col-md-3 col-lg-2">
                <span>List</span>
            </div>

            <div class=" col-xs-2 col-sm-4 col-md-6 col-lg-8">
            </div>
            <div class="page-btn-list  col-xs-5  col-sm-4 col-md-3 col-lg-2">
                 <a class="btn btn-info btn-create" href="{{ path('schedule_confevent_new') }}">
                         <i class="fa fa-plus"></i>
                    </a>
            </div>
        </div>
        <div class="row page-content">
         
            <table class="table table-hover records_list">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Categories</th>
                        <th>Location</th>
                        <th>Startat</th>
                        <th>Duration</th>
                        <th>Endat</th>
                        <th>Summary</th>
                       <!-- <th>Rrule</th> -->
                        <th colspan="3">{% trans %}Actions{% endtrans %}</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in pager.currentPageResults %}
                    <tr>
                        <td><a href="{{ path('schedule_event_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>
                            {% for category in entity.categories %}
                            <div style="width:28px;height:28px;border:1px solid #222;background:{{ category.color }};float:left;margin-right:6px;" title="{{ category.name }}"></div>
                            {% endfor %}
                        </td>
                        <td>{{ entity.location.name }}</td>
                        <td>{% if entity.startAt %}{{ entity.startAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ entity.duration }}</td>
                        <td>{% if entity.endAt %}{{ entity.endAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ entity.summary }}</td>
                     <!--   <td>
                        {% if entity.includedRule %}
                            {{ entity.includedRule }}
                        {% endif %}
                        </td>-->
                        <td>
                            <a class="btn btn-block btn-default" href="{{ path('schedule_confevent_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i></a>
                        </td>
                        <td>
                            <a class="btn btn-block btn-warning edit-event" href="{{ path('schedule_confevent_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
               
            <div class="row">
              <div class="col-md-3 col-md-offset-3"></div>
              <div class="col-md-3 col-md-offset-3"> {{ pagerfanta(pager, 'twitter_bootstrap') }}</div>
            </div>
        </div>

{% endblock %}
