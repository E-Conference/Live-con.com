<table class="table">
    <thead>
        <tr>
            <th>Relation Id</th>
            <th>Paper Title</th>
            <th>Paper Author</th>
        </tr>
    </thead>

    <tbody>
        {% for paper in entity.getPapers() %} 
            <tr> 
                <td>{{ paper.id }}</td>
                <td>{{ paper.title }}</td>
                <td> {% for author in paper.getAuthor() %} 
                        {{author.getPerson().name}}
                </td>
                 {% endfor %}
            </tr> 
        {% endfor %}
    </tbody>

    {% if with_form is defined and with_form %}
    <tfoot>
        <tr>
            <td colspan="4">
                <form action="{{ path('schedule_relation_add', { 'calendar_entity_id': entity.id}) }}" method="post">
                    {{ form_widget(relation_form) }}
                    <button type="submit" class="btn btn-info"><i class="icon-plus"></i></button>
                </form>
            </td>
        </tr>
    </tfoot>
    {% endif %}
</table>
