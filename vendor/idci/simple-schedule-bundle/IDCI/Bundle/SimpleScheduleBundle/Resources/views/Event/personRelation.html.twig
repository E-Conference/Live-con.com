<table class="table">
    <thead>
        <tr>
            <th>Relation Id</th>
            <th>Paper Title</th>
            <th>Paper Author</th>
        </tr>
    </thead>

    <tbody>
        {% for role in entity.getRole() %} 
            <tr> 
                <td>{{ role.getType().libelle }}</td>
                <td>{{ role.getPerson().name }}</td>
                <td>{{ role.getPerson().email }}</td>
            </tr> 
        {% endfor %}
    </tbody>

    {% if with_form is defined and with_form %}
    <tfoot>
        <tr>
            <td colspan="4">
                <form action="{{ path('admin_schedule_relation_add', { 'calendar_entity_id': entity.id}) }}" method="post">
                    {{ form_widget(relation_form) }}
                    <button type="submit" class="btn btn-info"><i class="icon-plus"></i></button>
                </form>
            </td>
        </tr>
    </tfoot>
    {% endif %}
</table>
