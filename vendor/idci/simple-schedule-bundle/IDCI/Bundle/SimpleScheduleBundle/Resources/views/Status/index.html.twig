{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block body %}

{{ parent() }}


<div class="page-header">
    <h1>{% trans %}Status{% endtrans %}</h1>
</div>

<p>
    {{ pagerfanta(pager, 'twitter_bootstrap') }}
</p>


        <a class="btn btn-info" href="{{ path('schedule_status_new') }}">
             <span class="icon-plus glyphicon-white"></span>
        </a>


<table class="table table-hover records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Value</th>
            <th>CalendarEntity</th>
            <th colspan="3">{% trans %}Actions{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in pager.currentPageResults %}
        <tr>
            <td><a href="{{ path('schedule_status_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.value }}</td>
            <td>{{ entity.discr }}</td>
            <td>
                <a class="btn btn-success btn-block" href="{{ path('schedule_status_show', { 'id': entity.id }) }}"><span class="icon-eye-open glyphicon-white"></span></a>
            </td>
            <td>
                <a class="btn btn-block btn-warning" href="{{ path('schedule_status_edit', { 'id': entity.id }) }}"><span class="icon-edit glyphicon-white"></span></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>


{% endblock body %}
