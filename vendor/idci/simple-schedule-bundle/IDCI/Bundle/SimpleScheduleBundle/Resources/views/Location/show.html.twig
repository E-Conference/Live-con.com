{% extends 'fibeWWWConfBundle::base.html.twig' %}


{% block title %}New location{% endblock title %}

{% block centerPanel %}
  {{ parent() }}
      <div class="row page-top-header ">
            <div class="page-title col-xs-5  col-sm-4 col-md-3 col-lg-2">
                <span>Location details</span>
            </div>

            <div class="col-xs-2 col-sm-4 col-md-6 col-lg-8">
            </div>
            <div class="page-btn-list col-xs-5  col-sm-4 col-md-3 col-lg-2">
                 <a type="button" href="{{ path('schedule_location') }}" class="btn btn-warning" title="Go back to the list">
                    <i class="fa fa-list"></i>
                </a>
                 <a href="{{ path('schedule_location_edit', { 'id': entity.id }) }}" class="btn btn-success edit" title="Edit location">
                       <i class="fa fa-pencil"></i>
                 </a>
                 <form action="{{ path('schedule_location_delete', { 'id': entity.id }) }}" method="post">
                    <input type="hidden" name="_method" value="DELETE" />
                      {{ form_widget(delete_form) }}
                  <button type="submit" class="btn btn-danger delete"  title="Remove location">
                      <i class="fa fa-trash-o"></i>
                  </button>
                </form> 
            </div>
      </div>
      <div class="row page-content">
        <div class="row">
            <div class="col-lg-12">
                <h2> {{ entity.name }}</h2>
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ entity.name }}</td>
                    </tr>

                    <tr>
                        <th>Description</th>
                        <td>{{ entity.description }}</td>
                    </tr>

                     <tr>
                        <th>Capacity</th>
                        <td>{{ entity.capacity }}</td>
                    </tr>

                    <tr>
                        <th>Equipments</th>
                        <td> {% for equipment in entity.getEquipments() %}
                                <i class="fa fa-{{ equipment.icon }}"></i>
                            {% endfor %}
                        <td>
                    </tr>
                    <tr>
                        <th>Latitude</th>
                        <td>{{ entity.latitude }}</td>
                    </tr>
                    <tr>
                        <th>Longitude</th>
                        <td>{{ entity.longitude }}</td>
                    </tr>
                    <tr>
                </tbody>
            </table>
        </div>
      </div>
    </div>


   
{% endblock %}
