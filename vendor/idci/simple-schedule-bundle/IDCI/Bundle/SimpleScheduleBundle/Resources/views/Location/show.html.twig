{% extends '::base.html.twig' %}

{% block body %}



<div class="page-header">
  <h1>Location</h1>
</div>

<table class="table table-hover record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Latitude</th>
            <td>{{ entity.latitude }}</td>
        </tr>
        <tr>
            <th>Longitude</th>
            <td>{{ entity.longitude }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a class="btn btn-success" href="{{ path('schedule_location') }}">
           <span class="icon-list glyphicon-white"></span>
        </a>
    </li>
    <li>
        <a class="btn btn-warning" href="{{ path('schedule_location_edit', { 'id': entity.id }) }}">
           <span class="icon-edit glyphicon-white"></span>
        </a>
    </li> 
</ul>
{% endblock body %}
