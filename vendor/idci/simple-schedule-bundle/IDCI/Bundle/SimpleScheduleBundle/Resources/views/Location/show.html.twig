{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block body %}

{{ parent() }}


<div class="page-header">
  <h1>Location</h1>
</div>

<table class="table table-hover record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Latitude</th>
            <td>{{ entity.latitude }}</td>
        </tr>
        <tr>
            <th>Longitude</th>
            <td>{{ entity.longitude }}</td>
        </tr>
         <tr>
            <th>Equipments</th>
            <td> {% for equipment in entity.getEquipments() %}
                    <i class="icon-{{ equipment.icon }}"></i>
                {% endfor %}
            <td>
        </tr>
    </tbody>
</table>

        <a class="btn btn-success" href="{{ path('schedule_location') }}">
           <i class="icon-list"></i>
        </a>
   
        <a class="btn btn-warning" href="{{ path('schedule_location_edit', { 'id': entity.id }) }}">
           <i class="icon-edit"></i>
        </a>
 
{% endblock body %}
