<table class="table">
    <thead>
        <tr>
            <th>id</th>
            <th>Relation</th>
            <th>startAt</th>
            <th>summary</th>
        </tr>
    </thead>

    <tbody>
        {% for relation in entity.getRelateds() %} 
            <tr> 
                <td>{{ relation.id }}</td>
                <th>{{ relation.relationType }}</th>
                <td>{{ relation.relatedTo.startAt | date('Y-m-d') }}</td>
                <td>{{ relation.relatedTo.summary }}</td>
            </tr> 
        {% endfor %}
    </tbody>

    {% if with_form is defined and with_form %}
    <tfoot>
        <tr>
            <td colspan="4">
                <form action="{{ path('schedule_relation_add', { 'id': entity.id}) }}" method="post">
                    {{ form_widget(relation_form) }}
                    <button type="submit" class="btn btn-info"><i class="fa fa-plus"></i></button>
                </form>
            </td>
        </tr>
    </tfoot>
    {% endif %}
</table>
