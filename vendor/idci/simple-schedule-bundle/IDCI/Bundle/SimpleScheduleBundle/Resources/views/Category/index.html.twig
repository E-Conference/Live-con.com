{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block body %}
{{ parent() }}

<div class="page-header">
   
    <div class="row">
        <div class="col-lg-2">
             <h1>{% trans %}Categories{% endtrans %}</h1>
        </div>
        <div class="col-lg-4">
             <a class="btn btn-info" href="{{ path('schedule_category_new') }}">
                 <i class="icon-plus"></i>
            </a>
        </div>
    </div>
</div>

<table class="table table-hover records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Color</th>
            <th>Name</th>
            <th>Slug</th>
            <th colspan="3">{% trans %}Actions{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in pager.currentPageResults %}
        <tr>
            <td><a href="{{ path('schedule_category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>
                <div style="width:28px;height:28px;border:1px solid #222;background:{{ entity.color }}" title="{{ entity.color }}">
                </div>
            </td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.slug }}</td>
            <td>
                <a class="btn btn-block btn-default" href="{{ path('schedule_category_show', { 'id': entity.id }) }}" title="Show category"><i class="icon-eye-open"></i></a>
            </td>
            <td>
                <a class="btn btn-block btn-warning" href="{{ path('schedule_category_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<p>
    {{ pagerfanta(pager, 'twitter_bootstrap') }}
</p>

{% endblock body %}
