{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block title %}Categories{% endblock title %}

{% block centerPanel %}
  {{ parent() }}
        <div class="page-header">
           
            <div class="row">
                <div class="col-lg-2">
                     <h1>{% trans %}Categories{% endtrans %}</h1>
                </div>
                {# <div class="col-lg-4">
                    <a class="btn btn-info btn-create" href="{{ path('schedule_category_new') }}">
                         <i class="fa fa-plus"></i>
                    </a>
                </div> #}
            </div>
        </div>

        <table class="table table-hover records_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Color</th>
                    <th>Name</th> 
                    <th colspan="3">{% trans %}Actions{% endtrans %}</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in pager.currentPageResults %}
                <tr>
                    <td><a href="{{ path('schedule_category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>
                        <div style="width:28px;height:28px;border:1px solid #222;background:{{ entity.color }}" title="{{ entity.color }}">
                        </div>
                    </td>
                    <td>{{ entity.name }}</td> 
                    <td>
                        <a class="btn btn-block btn-default" href="{{ path('schedule_category_show', { 'id': entity.id }) }}" title="Show category"><i class="fa fa-eye"></i></a>
                    </td>
                    {# <td>
                        <a class="btn btn-block btn-warning" href="{{ path('schedule_category_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil-square-o"></i></a>
                    </td> #}
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <p>
            {{ pagerfanta(pager, 'twitter_bootstrap') }}
        </p>

{% endblock %}
