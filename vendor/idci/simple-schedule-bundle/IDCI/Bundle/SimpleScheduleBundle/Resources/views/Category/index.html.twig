{% extends "IDCISimpleScheduleBundle::adminbase.html.twig" %}

{% block body %}

{{ parent() }}

<div class="page-header">
    <h1>{% trans %}Categories{% endtrans %}</h1>
</div>

<p>
    {{ pagerfanta(pager, 'twitter_bootstrap') }}
</p>


        <a class="btn btn-info" href="{{ path('admin_schedule_category_new') }}">
          <span class="glyphicon glyphicon-plus  glyphicon-white"></span>
        </a>


<table class="table table-hover records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Color</th>
            <th>Name</th>
            <th>Slug</th>
            <th colspan="3">{% trans %}Actions{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in pager.currentPageResults %}
        <tr>
            <td><a href="{{ path('admin_schedule_category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>
                <div style="width:28px;height:28px;border:1px solid #222;background:{{ entity.color }}" title="{{ entity.color }}">
                </div>
            </td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.slug }}</td>
            <td>
                <a class="btn btn-block btn-default" href="{{ path('admin_schedule_category_show', { 'id': entity.id }) }}" title="Show category"><span class="glyphicon glyphicon-eye-open  glyphicon-white"></span></a>
            </td>
            <td>
                <a class="btn btn-block btn-warning" href="{{ path('admin_schedule_category_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-edit  glyphicon-white"></span></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>


{% endblock body %}
