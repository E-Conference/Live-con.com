{% extends 'fibeWWWConfBundle::base.html.twig' %}

{% block title %}Location{% endblock title %}

{% block centerPanel %}
  {{ parent() }}

   <div class="row page-top-header ">
        <div class="page-title col-xs-2  col-xs-5  col-sm-4 col-md-3 col-lg-2">
            <span>List</span>
        </div>

        <div class=" col-xs-2 col-sm-4 col-md-6 col-lg-8">
        </div>
        <div class="page-btn-list  col-xs-5  col-sm-4 col-md-3 col-lg-2">
            <a class="btn btn-info btn-create create" href="{{ path('schedule_location_new') }}" title="Add a location">
                 <i class="fa fa-plus"></i>
            </a>
        </div>
    </div>
    <div class="row page-content">

        <table class="table table-hover records_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Capacity</th>
                    <th>Equipments</th>
                    <th colspan="3">{% trans %}Actions{% endtrans %}</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in pager.currentPageResults %}
                <tr>
                    <td><a href="{{ path('schedule_location_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.description }}</td>
                    <td>{{ entity.capacity }}</td>
                    <td> {% for equipment in entity.getEquipments() %}
                            <i class="fa fa-{{ equipment.icon }}"></i>
                        {% endfor %}
                    </td>
                    <td>
                        <a class="btn btn-block btn-default btn-small" href="{{ path('schedule_location_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i></a>
                    </td>
                    <td>
                        <a class="btn btn-block btn-warning btn-small edit" href="{{ path('schedule_location_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil"></i></a>
                     </td> 
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <p>
            {{ pagerfanta(pager, 'twitter_bootstrap') }}
        </p>
    </div>

{% endblock %}
