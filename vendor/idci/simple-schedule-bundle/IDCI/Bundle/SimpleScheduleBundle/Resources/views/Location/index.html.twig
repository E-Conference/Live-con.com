{% extends "IDCISimpleScheduleBundle::adminbase.html.twig" %}

{% block body %}

{{ parent() }}

<div class="page-header">
    <h1>{% trans %}Locations{% endtrans %}</h1>
</div>

<p>
    {{ pagerfanta(pager, 'twitter_bootstrap') }}
</p>

<ul class="list_actions">
    <li>
        <a class="btn btn-primary" href="{{ path('admin_schedule_location_new') }}">
            {% trans %}<i class="icon icon-plus icon-white"></i>{% endtrans %}
        </a>
    </li>
</ul>

<table class="table table-bordered table-striped table-condensed records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th colspan="3">{% trans %}Actions{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in pager.currentPageResults %}
        <tr>
            <td><a href="{{ path('admin_schedule_location_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.latitude }}</td>
            <td>{{ entity.longitude }}</td>
            <td>
                <a class="btn btn-block btn-info btn-small" href="{{ path('admin_schedule_location_show', { 'id': entity.id }) }}">{% trans %}<i class="icon icon-eye-open icon-white"></i>{% endtrans %}</a>
            </td>
            <td>
                <a class="btn btn-block btn-warning btn-small" href="{{ path('admin_schedule_location_edit', { 'id': entity.id }) }}">{% trans %}<i class="icon icon-edit icon-white"></i>{% endtrans %}</a>
             </td> 
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul class="list_actions">
    <li>
        <a class="btn btn-primary" href="{{ path('admin_schedule_location_new') }}">
            {% trans %}<span class="class="glyphicon glyphicon-plus"></span>{% endtrans %}
        </a>
    </li>
</ul>


{% endblock body %}
